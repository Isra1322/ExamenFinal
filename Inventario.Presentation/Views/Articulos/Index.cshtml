@model List<Inventario.Entities.Articulo>
@{
    ViewData["Title"] = "Artículos";
}

<h2>@ViewData["Title"]</h2>

<form class="row mb-3" method="get">
    <div class="col-md-4">
        <input type="text" name="filtro" class="form-control" placeholder="Buscar por código o nombre" value="@ViewBag.Filtro" />
    </div>
    <div class="col-md-3">
        <input type="text" name="categoria" class="form-control" placeholder="Categoría" value="@ViewBag.Categoria" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
    <div class="col-md-3 text-end">
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Create" class="btn btn-success">+ Nuevo Artículo</a>
        }
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Estado</th>
            <th>Ubicación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>@item.Categoria</td>
                <td>@item.Estado</td>
                <td>@item.Ubicacion</td>
                <td>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
